<div class="page-header">
  <h1><%=t '.title', :default => t("helpers.titles.next_followup of #{@customer.name}") %></h1>
</div>



<%= form_for :next_followup, :html => { :class => 'form-horizontal' } do |f| %>

    <%= error_messages_for :next_followup %>

  <div class="control-group">
    <%= f.label :next_followup_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :next_followup_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :note, :size => "24x6", :class => 'text_area' %>
    </div>
  </div>

   <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @location, :class => 'btn' %>
  </div>
<% end %>
