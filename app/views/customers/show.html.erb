              
      <%- model_class = @customer.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

              <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Basic Info</a></li>
    <li><a href="#tab2" data-toggle="tab">Next Follow Up</a></li>
    </ul>
    <div class="tab-content">
    <div class="tab-pane active" id="tab1">
    <p>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @customer.name %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:contact_no) %>:</strong></dt>
  <dd><%= @customer.contact_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @customer.area %></dd>

   <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @customer.address %></dd>


  <dt><strong><%= model_class.human_attribute_name(:land_mark) %>:</strong></dt>
  <dd><%= @customer.land_mark %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_type_id) %>:</strong></dt>
  <dd><%= @customer.call_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @customer.status.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contacted_person) %>:</strong></dt>
  <dd><%= @customer.contacted_person %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_id) %>:</strong></dt>
  <dd><%= @customer.designation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_contact_no) %>:</strong></dt>
  <dd><%= @customer.site_contact_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visited_location_id) %>:</strong></dt>
  <dd><%= @customer.visited_location_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brand_id) %>:</strong></dt>
  <dd><%= @customer.brand.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probable_bags_no) %>:</strong></dt>
  <dd><%= @customer.probable_bags_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dispatch_date) %>:</strong></dt>
  <dd><%= @customer.dispatch_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:next_followup_date) %>:</strong></dt>
  <dd><%= @customer.next_followup_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:followup_id) %>:</strong></dt>
  <dd><%= @customer.followup.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_nature_id) %>:</strong></dt>
  <dd><%= @customer.site_nature.name %></dd>
</dl>




    </p>
    </div>
    <div class="tab-pane" id="tab2">
    <p>
      <dl class="dl-horizontal">
      <% @customer.next_followups.each do |next_followup| %>
        <dt><strong><%= model_class.human_attribute_name(:followup_date) %>:</strong></dt>
        <dd><%= next_followup.next_followup_date %></dd>
        <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
        <dd><%= next_followup.note %></dd>
        <br />
      <% end %>
    </dl>
    </p>
    </div>
    </div>
    </div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>

  <%= link_to 'Next Follow up', 
              next_followup_customer_path(@customer), :class => 'btn btn-primary'  %>
</div>












